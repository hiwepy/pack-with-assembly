<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<!-- id标识，唯一即可，若pom中的appendAssemblyId设置为true，则会添加此id作为后缀 -->
	<id>jsw-linux</id>
	<formats>
		<!-- 打包的格式 -->
		<format>dir</format>
		<!-- 
		<format>tar.bz2</format>
		<format>tar.gz</format>
		<format>jar</format>
		<format>war</format>
		-->
		<format>zip</format>
	</formats>
	<!-- 打包的文件不包含项目目录，压缩包下直接是文件 -->
	<includeBaseDirectory>false</includeBaseDirectory>	
	<!-- 配置依赖的输出 -->
	<dependencySets>
		<dependencySet>
			<!-- 是否把当前项目的输出jar包并使用，true则会把当前项目输出为jar包到输出目录,false不输出 -->
			<useProjectArtifact>false</useProjectArtifact>
			<!-- 依赖输出目录，相对输出目录的根目录，当前示例把依赖输出到lib目录 -->
			<outputDirectory>/lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>		
	</dependencySets>
	<!-- 文件输出 -->
	<files>
		<file>
			<source>${project.build.directory}/${project.build.finalName}.${project.packaging}</source>
			<outputDirectory>/lib</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/wrapper-delta-pack-${wrapper-delta-pack.version}/doc/wrapper-community-license-1.3.txt</source>
			<outputDirectory>/bin/jsw/license</outputDirectory>
			<destName>LICENSE.txt</destName>
		</file>
		<file>
			<source>${project.build.directory}/wrapper-delta-pack-${wrapper-delta-pack.version}/bin/demoapp</source>
			<outputDirectory>/bin</outputDirectory>
			<destName>${project.pack.name}</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>  
            <directory>${project.basedir}</directory>  
            <outputDirectory>/</outputDirectory>  
            <includes>  
                <include>README.md</include>  
                <include>LICENSE</include>  
                <include>COPYRIGHT</include>  
            </includes>  
        </fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<includes>
				<include>application.properties</include>
				<include>application.yml</include>
				<include>conf/**</include>
			</includes>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/wrapper-delta-pack-${wrapper-delta-pack.version}</directory>
			<fileMode>0755</fileMode>
			<includes>
				<include>bin/**</include>
			</includes>
			<excludes>
				<exclude>bin/demoapp</exclude>
				<exclude>bin/testwrapper</exclude>
				<exclude>bin/wrapper-aix**</exclude>
				<exclude>bin/wrapper-freebsd**</exclude>
				<exclude>bin/wrapper-hpux**</exclude>
				<exclude>bin/wrapper-macosx**</exclude>
				<exclude>bin/wrapper-solaris**</exclude>
				<exclude>bin/wrapper-windows**</exclude>
				<exclude>bin/**.bat</exclude>
			</excludes>
			<outputDirectory>/bin/jsw</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/wrapper-delta-pack-${wrapper-delta-pack.version}</directory>
			<includes>
				<include>conf/**</include>
				<include>lib/**</include>
			</includes>
			<excludes>
				<exclude>lib/wrapperdemo.jar</exclude>
				<exclude>lib/wrappertest.jar</exclude>
				<exclude>lib/demoapp</exclude>
				<exclude>lib/DemoApp.bat</exclude>
				<exclude>lib/libwrapper-aix**</exclude>
				<exclude>lib/libwrapper-freebsd**</exclude>
				<exclude>lib/libwrapper-hpux**</exclude>
				<exclude>lib/libwrapper-macosx**</exclude>
				<exclude>lib/libwrapper-solaris**</exclude>
				<exclude>lib/wrapper-windows**</exclude>
			</excludes>
			<outputDirectory>/bin/jsw</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/wrapper-delta-pack-${wrapper-delta-pack.version}</directory>
			<includes>
				<include>logs/**</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<includes>
				<include>temp/**</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>